<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameAnimalClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="?attr/colorPrimaryDark"

        android:text="@string/name_text_label" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/especieAnimalText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="@string/species_text_label"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/speciesAnimalClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pet_species"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="0dp"
            android:textAlignment="viewStart"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/razaAnimalText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="@string/breed_text_label"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/breedAnimalClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pet_breed"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack"
            android:textSize="30dp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numeroAnimalText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="30dp"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimaryDark"
            android:layout_marginLeft="40dp"
            android:text="@string/chipNum_text_label" />

        <TextView
            android:id="@+id/numberAnimalClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/ID_Number"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack"
            android:textSize="30dp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fechaNacAnimalText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:text="@string/birthday_text_label"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/birthdayAnimalClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_model"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlack"
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>