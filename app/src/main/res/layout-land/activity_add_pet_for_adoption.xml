<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".editPetForAdoption.EditPetForAdoptionActivity">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

                <TextView
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday_text_label"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="34dp"
                    android:background="?attr/colorPrimaryDarkTrans"
                    android:hint="@string/date_model"
                    android:paddingLeft="20dp"
                    android:textColor="?attr/colorAccent"
                    android:textColorHint="?attr/colorAccent"
                    android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="@string/breed_text_label"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="34dp"
                android:background="?attr/colorPrimaryDarkTrans"
                android:hint="@string/insert_lost_pet_breed"
                android:paddingLeft="20dp"
                android:textColor="?attr/colorAccent"
                android:textColorHint="?attr/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="@string/details_pet_for_adoption"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:background="?attr/colorPrimaryDarkTrans"
                android:hint="@string/details_mock"
                android:paddingLeft="20dp"
                android:textColor="?attr/colorAccent"
                android:textColorHint="?attr/colorAccent"
                android:gravity="top|left"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="@string/lost_pet_phone"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="34dp"
                android:background="?attr/colorPrimaryDarkTrans"
                android:hint="@string/phone_mock"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:textColor="?attr/colorAccent"
                android:textColorHint="?attr/colorAccent" />
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageNewPetForAdoption"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:background="?attr/colorAccent"
                tools:srcCompat="@mipmap/ic_pet_add_image"
                android:clickable="true"
                android:onClick="takePicture"
                android:contentDescription="TODO"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
